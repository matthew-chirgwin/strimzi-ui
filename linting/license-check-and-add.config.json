{
  "license": "./utils/tooling/headers/StrimziHeader.txt",
  "ignore": [
    ".**",
    ".git/**",
    "./utils/headers",
    "**.md",
    "**.pptx",
    "./build/dockerfile",
    "./generated/**"
  ],
  "licenseFormats": {
    "tsx|jsx|ts|js|css|scss": {
      "prepend": "/*",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "html|svg": {
      "prepend": "<!-- ",
      "append": "-->",
      "eachLine": {
        "prepend": " "
      }
    },
    "dotfiles|prettierignore|feature": {
      "eachLine": {
        "prepend": "# "
      }
    }
  }
}
